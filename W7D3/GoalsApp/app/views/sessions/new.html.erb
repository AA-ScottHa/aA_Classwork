<h1>Sign In!</h1>

<form action="<%= session_url %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"> 
    <label>Username:
    <input type="text" name="username">
    </label>
    <br>
    <label>Password: 
    <input type="text" name="password">
    </label>
    <br>
    <input type="submit" value="Sign In!">
    <br>
</form> 